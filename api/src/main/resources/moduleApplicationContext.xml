<?xml version="1.0" encoding="UTF-8"?>

<!-- Beans to add to the current Application context definition -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:component-scan base-package="org.openmrs.module.messages"/>

    <bean id="messages.configService" class="org.openmrs.module.messages.api.config.impl.ConfigServiceImpl"/>

    <bean id="messages.actorService" class="org.openmrs.module.messages.api.actor.impl.ActorServiceImpl">
        <property name="configService">
            <ref local="messages.configService"/>
        </property>
    </bean>

    <bean id="messages.TemplateDao" class="org.openmrs.module.messages.api.dao.impl.TemplateDaoImpl"/>

    <bean id="messages.PatientTemplateDao" class="org.openmrs.module.messages.api.dao.impl.PatientTemplateDaoImpl"/>

    <bean id="messages.MessagingGroupDao" class="org.openmrs.module.messages.api.dao.impl.MessagingGroupDaoImpl"/>

    <bean id="messages.MessagingDao" class="org.openmrs.module.messages.api.dao.impl.MessagingDaoImpl"/>
    <bean id="messages.ActorResponseDao" class="org.openmrs.module.messages.api.dao.impl.ActorResponseDaoImpl"/>

    <bean id="messages.templateService" class="org.openmrs.module.messages.api.service.impl.TemplateServiceImpl"/>

    <bean id="messages.messagingService" class="org.openmrs.module.messages.api.service.impl.MessagingServiceImpl">
        <property name="dao">
            <ref local="messages.MessagingDao"/>
        </property>
        <property name="conceptService">
            <ref bean="conceptServiceTarget"/>
        </property>
        <property name="actorResponseDao">
            <ref local="messages.ActorResponseDao"/>
        </property>
    </bean>
</beans>
